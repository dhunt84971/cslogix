<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0;net8.0</TargetFrameworks>
    <LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>CSLogix</PackageId>
    <Version>1.0.0</Version>
    <Authors>CSLogix Contributors</Authors>
    <Description>C# library for Ethernet/IP communication with Allen Bradley PLCs</Description>
    <PackageTags>PLC;Allen Bradley;EtherNet/IP;ControlLogix;CompactLogix;Industrial</PackageTags>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="CSLogix.Tests" />
  </ItemGroup>

</Project>
